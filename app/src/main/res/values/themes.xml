<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.OKQuizMe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Color Setup -->
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#03DAC6</item>

        <!-- Backgrounds -->
        <item name="android:colorBackground">?android:colorBackground</item>
        <item name="colorSurface">?android:colorBackground</item>
        <item name="colorOnSurface">?android:textColorPrimary</item>

        <!-- Buttons / Widgets -->
        <item name="buttonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="textAppearanceButton">@style/TextAppearance.MaterialComponents.Button</item>

        <!-- Fix ScrollView crash: define android:foreground fallback -->
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
</resources>
